generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) @db.Uuid
  name     String
  email    String @unique
  password String
  phone    String
  cep      String

  @@map("users")
}

model Barber {
  id      String @id @default(uuid()) @db.Uuid
  owner   String
  email   String @unique
  phone   String @unique
  cep     String
  address String
  city    String
  state   String
  number  Int

  @@map("barbers")
}

